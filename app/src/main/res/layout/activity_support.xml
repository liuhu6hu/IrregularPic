<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.lagerimage_test.ui.SupportActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="@string/support"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView

            android:id="@+id/support_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:padding="@dimen/padding_common_h"
            android:textSize="@dimen/textSize_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bar_grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/support_context"
            android:layout_marginTop="40dp"
            android:background="@color/white"
            android:minHeight="50dp"
            android:paddingLeft="@dimen/padding_common_v"
            android:paddingRight="@dimen/padding_common_v">

            <TextView
                style="@style/AppTheme.Label"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/padding_common"
                android:paddingTop="@dimen/padding_common"
                android:text="技术支持热线"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/call_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/padding_common_v"
                android:drawableRight="@android:drawable/ic_menu_call"
                android:gravity="center_vertical"
                android:textColor="@color/color_gray" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
